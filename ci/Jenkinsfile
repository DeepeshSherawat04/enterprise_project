pipeline {
    agent any

    environment {
        // Root of repo in Jenkins workspace
        PROJECT_ROOT = "${WORKSPACE}"
        PYTHONPATH   = "${WORKSPACE}"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out the repository..."
                // Declarative checkout is done automatically above,
                // so we just log here.
            }
        }

        stage('Install Dependencies') {
            steps {
                bat """
                cd /d %PROJECT_ROOT%
                pip install -r requirements.txt
                """
            }
        }

        stage('Run Unit Tests (pytest)') {
            steps {
                bat """
                cd /d %PROJECT_ROOT%
                echo Using PYTHONPATH=%PYTHONPATH%
                pytest -q
                """
            }
        }

        stage('Run ETL Pipeline') {
            steps {
                bat """
                cd /d %PROJECT_ROOT%
                echo Running ETL with PYTHONPATH=%PYTHONPATH%
                python -m etl.fetch_data
                python -m etl.validate_data
                python -m etl.load_data
                """
            }
        }

        stage('API Smoke Test') {
            steps {
                bat """
                cd /d %PROJECT_ROOT%
                echo Starting API for smoke test...
                start /B uvicorn api.main:app --host 127.0.0.1 --port 9000

                rem Give the server a few seconds to start
                timeout /t 5 /nobreak >NUL

                echo Hitting /health endpoint...
                curl -s -o NUL -w "HTTP_STATUS=%%{http_code}" http://127.0.0.1:9000/health

                rem (Optional) kill uvicorn after test if needed
                """
            }
        }

        stage('Done') {
            steps {
                echo "Pipeline completed successfully ‚úÖ"
            }
        }
    }

    post {
        success {
            echo "FinDataFlow-CI: SUCCESS üéâ"
        }
        failure {
            echo "FinDataFlow-CI: FAILED ‚ùå ‚Äì check console output"
        }
    }
}
